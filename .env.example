# SpectrumAlert Docker Environment Configuration
# Copy this file to .env and modify as needed

# Autonomous Mode Configuration
COLLECTION_HOURS=24
RETRAIN_INTERVAL_HOURS=168
MIN_TRAINING_SAMPLES=1000

# Service Mode Configuration
SERVICE_MODEL=latest
SERVICE_LITE_MODE=false
SERVICE_ALERT_THRESHOLD=0.7

# Logging Configuration
LOG_LEVEL=INFO

# RTL-SDR Configuration
RTL_SDR_DEVICE=0
RTL_SDR_GAIN=auto

# MQTT Configuration (if using MQTT alerts)
MQTT_BROKER=localhost
MQTT_PORT=1883
MQTT_TOPIC=spectrum_alert

# Monitoring Configuration
MONITORING_INTERVAL=5
ALERT_COOLDOWN=60
